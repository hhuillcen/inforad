                </TextView>
                <TextView
                    android:id="@+id/textView34"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:background="#FFFF00">
                </TextView>
                <TextView
                    android:id="@+id/textView35"
                    android:text="5"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:background="#FFFF00">
                </TextView>
                <TextView
                    android:id="@+id/textView36"
                    android:text="6"
