                </TextView>
            </TableRow>




        </TableLayout>




    <com.androidplot.xy.XYPlot
        android:id="@+id/mySimpleXYPlot"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="12dp"


        androidPlot.domainLabel="HORA"
        androidPlot.rangeLabel="RADIACIÓN UV"

        />

    <TextView
        android:id="@+id/txBienvenida2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Predicciones de temperatura día actual"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#000000"
        />


    <com.androidplot.xy.XYPlot
        android:id="@+id/mySimpleXYPlot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"

        androidPlot.title="Predicciones para el día actual"
        androidPlot.domainLabel="HORA"
        androidPlot.rangeLabel="TEMPERATURA"

        />


</LinearLayout>
